{
    "build": {
        "target": "gen",
        "tasks": [
            { "for": "hana", "src": "db", "options": { "model": ["db", "srv"] } },
            { "for": "node-cf", "src": "srv", "options": { "model": ["db", "srv"] } }
        ]
    },
    "[production]": {
        "requires": {
            "db": {
                "kind": "hana",
                "model": ["db", "srv"]
            },
            "uaa": {
                "kind": "xsuaa"
            }
        }
    },
    "requires": {
        "db": {
            "kind": "sqlite",
            "credentials": {
                "database": "bookshop.db"
            }
        }
    },
    "odata": {
        "version": "v4"
    }
}
