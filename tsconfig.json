{
    "compilerOptions": {
        "lib": ["ES2019"],
        "module": "commonjs",
        "target": "ES2019",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./srv",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
